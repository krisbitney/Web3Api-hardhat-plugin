{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es5",
      "dom",
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "./test",
    "./src"
  ]
}
